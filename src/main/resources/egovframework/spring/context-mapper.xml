<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/mappers/mariadb/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/egovframework/sqlmap/mappers/mariadb/**/*SQL.xml" />
	</bean>

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlDb2Session" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="db2.dataSource" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/mappers/db2/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/egovframework/sqlmap/mappers/db2/**/*SQL.xml" />
	</bean>

	<!-- SqlSession setup for Oracle Database Layer -->
	<bean id="sqlOracleSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="oraDb.dataSource" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/mappers/oracle/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/egovframework/sqlmap/mappers/oracle/**/*SQL.xml" />
	</bean>

	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
 	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="com.seegene.web.repository.mariadb" />
		<property name="sqlSessionFactoryBeanName" value="sqlSession" />
	</bean>

	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
 	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="com.seegene.web.repository.db2" />
		<property name="sqlSessionFactoryBeanName" value="sqlDb2Session" />
	</bean>

	<!-- MapperConfigurer setup for Oracle Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="com.seegene.web.repository.oracle" />
		<property name="sqlSessionFactoryBeanName" value="sqlOracleSession" />
	</bean>
</beans>